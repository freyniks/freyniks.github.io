<script>
  function toggleTooltip(element) {
    // Toggle visibility of the tooltip within the clicked element
    let tooltip = element.querySelector('.tooltip');
    if (tooltip.classList.contains('open')) {
      tooltip.classList.remove('open');
    } else {
      // Close any other open tooltips (optional behavior)
      document.querySelectorAll('.tooltip.open').forEach(t => t.classList.remove('open'));
      tooltip.classList.add('open');
    }
  }

  function closeTooltip(closeBtn) {
    // Close the parent tooltip
    closeBtn.parentElement.classList.remove('open');
  }
</script>

